cabal-version: 2.2

name: indigo
version: 0.0.0.0

common common
  build-depends:
    , base
    , relude
  mixins:
    , base hiding (Prelude)
    , relude (Relude as Prelude)
    , relude
  default-language: Haskell2010
  default-extensions:
    DerivingStrategies
    InstanceSigs
    LambdaCase
    NamedFieldPuns
    OverloadedRecordDot
  ghc-options:
    -Wall
    -Wcompat
    -Werror=incomplete-patterns
    -Werror=incomplete-record-updates
    -Werror=incomplete-uni-patterns
    -Werror=missing-fields
    -Werror=missing-methods
    -Werror=partial-fields
    -Widentities
    -Wmissing-home-modules
    -Wno-unticked-promoted-constructors
    -Wredundant-constraints

common executable
  ghc-options:
    -threaded
    -rtsopts
    -with-rtsopts=-N

library
  import: common
  hs-source-dirs: src
  build-depends:
    , containers
  exposed-modules:
    Indigo
    Indigo.Position
    Indigo.Range
    Indigo.Range.Internal
    Indigo.Selection
    Indigo.Selection.Internal

executable indigo
  import:
    , common
    , executable
  main-is: src/Main.hs
  build-depends: indigo
